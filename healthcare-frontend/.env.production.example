# Production Environment Variables - Frontend
# Copy this to .env.production in healthcare-frontend/

# ============================================
# API Configuration
# ============================================
VITE_API_URL=http://localhost:5000
VITE_API_VERSION=v1
VITE_API_TIMEOUT=30000
VITE_API_BASE_PATH=/api/v1

# ============================================
# Authentication & Tokens
# ============================================
VITE_TOKEN_KEY=authToken
VITE_REFRESH_TOKEN_KEY=refreshToken
VITE_JWT_EXPIRATION=7d
VITE_TOKEN_REFRESH_THRESHOLD=300000

# ============================================
# Application Configuration
# ============================================
VITE_APP_NAME=Healthcare Management System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Comprehensive Healthcare Management Platform
VITE_APP_TITLE=Healthcare System
VITE_APP_LOGO=https://yourdomain.com/logo.svg
VITE_APP_ICON=https://yourdomain.com/favicon.ico

# ============================================
# UI/UX Configuration
# ============================================
VITE_THEME=light
VITE_PRIMARY_COLOR=#1890ff
VITE_SECONDARY_COLOR=#52c41a
VITE_LANGUAGE=vi
VITE_SUPPORTED_LANGUAGES=vi,en,zh

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_2FA=true
VITE_ENABLE_AUDIT_LOG=true
VITE_ENABLE_BACKUP=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_MULTI_LANGUAGE=true
VITE_ENABLE_EXPORT_PDF=true
VITE_ENABLE_PRINT=true

# ============================================
# Advanced Features
# ============================================
VITE_ENABLE_ADVANCED_SEARCH=true
VITE_ENABLE_BULK_OPERATIONS=true
VITE_ENABLE_CUSTOM_FILTERS=true
VITE_ENABLE_SAVED_VIEWS=true

# ============================================
# Socket.IO Configuration (Real-time features)
# ============================================
VITE_SOCKET_IO_URL=http://localhost:5000
VITE_SOCKET_IO_PATH=/socket.io
VITE_SOCKET_IO_TRANSPORT=websocket,polling
VITE_SOCKET_IO_RECONNECTION=true
VITE_SOCKET_IO_RECONNECTION_DELAY=1000
VITE_SOCKET_IO_RECONNECTION_DELAY_MAX=5000

# ============================================
# Analytics & Monitoring
# ============================================
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_MIXPANEL_TOKEN=your-mixpanel-token
VITE_ENABLE_ANALYTICS=true

# ============================================
# Logging Configuration
# ============================================
VITE_LOG_LEVEL=info
VITE_ENABLE_DEBUG=false
VITE_ENABLE_CONSOLE_LOGGING=false

# ============================================
# Storage Configuration
# ============================================
VITE_STORAGE_TYPE=localStorage
VITE_USE_SESSION_STORAGE=false
VITE_PERSIST_STATE=true

# ============================================
# File Upload Configuration
# ============================================
VITE_MAX_UPLOAD_SIZE=52428800
VITE_ALLOWED_UPLOAD_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,gif,xls,xlsx
VITE_UPLOAD_ENDPOINT=/api/v1/upload

# ============================================
# Print & Export Configuration
# ============================================
VITE_PRINT_MARGIN=10mm
VITE_PRINT_FONT_SIZE=12px
VITE_PDF_PAGE_SIZE=A4
VITE_EXPORT_FORMATS=pdf,excel,csv

# ============================================
# Security
# ============================================
VITE_ENABLE_CONTENT_SECURITY_POLICY=true
VITE_ENABLE_SUBRESOURCE_INTEGRITY=true

# ============================================
# Pagination
# ============================================
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100
VITE_PAGE_SIZES=10,20,50,100

# ============================================
# Time Format & Localization
# ============================================
VITE_DATE_FORMAT=DD/MM/YYYY
VITE_TIME_FORMAT=HH:mm:ss
VITE_DATETIME_FORMAT=DD/MM/YYYY HH:mm:ss
VITE_TIMEZONE=Asia/Ho_Chi_Minh

# ============================================
# Notification Configuration
# ============================================
VITE_NOTIFICATION_DURATION=3000
VITE_NOTIFICATION_PLACEMENT=topRight
VITE_ENABLE_SOUND_NOTIFICATION=false
VITE_ENABLE_DESKTOP_NOTIFICATION=true

# ============================================
# Search Configuration
# ============================================
VITE_SEARCH_MIN_CHARS=2
VITE_SEARCH_DEBOUNCE_MS=300
VITE_ENABLE_INSTANT_SEARCH=true

# ============================================
# Chart & Visualization
# ============================================
VITE_CHART_TYPE=echarts
VITE_ENABLE_CHARTS=true
VITE_CHART_THEME=light

# ============================================
# Email Preferences
# ============================================
VITE_ENABLE_EMAIL_REMINDERS=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_EMAIL_SIGNATURE=Healthcare Management System

# ============================================
# Business Rules
# ============================================
VITE_APPOINTMENT_REMINDER_HOURS=24
VITE_BILLING_REMINDER_DAYS=7
VITE_PRESCRIPTION_EXPIRY_DAYS=365
VITE_MEDICAL_RECORD_RETENTION_YEARS=7

# ============================================
# User Interface Behavior
# ============================================
VITE_AUTO_LOGOUT_MINUTES=30
VITE_SESSION_WARNING_MINUTES=5
VITE_CONFIRM_NAVIGATION_UNSAVED_CHANGES=true
VITE_SHOW_TIPS=true

# ============================================
# Deployment Info
# ============================================
VITE_BUILD_DATE=2025-12-11
VITE_BUILD_TIME=00:00:00
VITE_GIT_COMMIT=main
VITE_ENVIRONMENT=production

# ============================================
# Custom Branding (if multi-tenant)
# ============================================
VITE_ORGANIZATION_NAME=Healthcare System
VITE_ORGANIZATION_LOGO=https://yourdomain.com/logo.svg
VITE_ORGANIZATION_EMAIL=support@healthcare.com
VITE_ORGANIZATION_PHONE=+84-xxx-xxx-xxx
